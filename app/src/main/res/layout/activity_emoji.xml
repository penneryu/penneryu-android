<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.penner.android.EmojiActivity">

    <include layout="@layout/penner_toolbar"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/emoji_layout_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/emoji_edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/login_name_hint"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/emoji_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/penner_itempadding"
        android:textSize="@dimen/penner_title"
        android:textColor="@color/penner_title"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/emoji_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/penner_itempadding"
        android:text="@string/login"/>

</LinearLayout>
