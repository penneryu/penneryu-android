<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.penner.android.ServiceActivity">

    <include layout="@layout/penner_toolbar"/>

    <Button
        android:id="@+id/service_btn_bind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/penner_toolbar"
        android:text="Bind" />

    <Button
        android:id="@+id/service_btn_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/service_btn_bind"
        android:text="Action"/>

    <Button
        android:id="@+id/service_btn_unbind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/service_btn_action"
        android:text="Unbind"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/service_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/service_btn_unbind"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/penner_subtitle"
        android:textColor="@color/penner_subtitle" />

</RelativeLayout>
