<?xml version="1.0" encoding="utf-8"?>
<com.penner.android.view.bottomtab.BottomTabItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp"
    android:clickable="true"
    android:background="?attr/selectableItemBackgroundBorderless">

    <ImageView
        android:id="@+id/bottom_tab_item_img"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:focusable="false"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/bottom_tab_item_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bottom_tab_item_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:textColor="@drawable/penner_tab_txt"
        android:textSize="@dimen/penner_tab_txtsize" />

    <TextView
        android:id="@+id/bottom_tab_item_unreadtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/icon_unread"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/penner_tab_txtsize"
        android:visibility="invisible"/>

</com.penner.android.view.bottomtab.BottomTabItemView>