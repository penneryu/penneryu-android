<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.penner.android.AshmenActivity">

    <include layout="@layout/penner_toolbar"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ashmen_layout_edit"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/penner_itempadding"
        android:layout_marginRight="@dimen/penner_itempadding"
        android:layout_marginTop="@dimen/penner_itempadding">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ashmen_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColorHint="@color/penner_subtitle"
            android:textColorHighlight="@color/penner_subtitle"
            android:textSize="@dimen/penner_title"
            android:hint="@string/ashmen_input"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/ashmen_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="@dimen/penner_itempadding"
        android:layout_marginRight="@dimen/penner_itempadding"
        android:text="@string/penner_confirm"
        android:textColor="@color/penner_subtitle"
        android:background="@drawable/penner_btn_txt"/>
    
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/ashmen_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:textSize="@dimen/penner_subtitle"
        android:textColor="@color/penner_subtitle" />

</LinearLayout>
